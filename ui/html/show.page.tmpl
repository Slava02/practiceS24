{{template "base" .}}

{{define "title"}}Заметка #{{.Universe.ID}}{{end}}

{{define "main"}}
    {{with .Universe}}
    <div class='snippet'>
        <div class='metadata'>
            <strong>{{.Title}}</strong>
            <span>#{{.ID}}</span>
        </div>
        {{range $index, $value := .Params}}
            <pre><code>#{{$index}} X:{{$value.Coord.X}} Y:{{$value.Coord.Y}} Z:{{$value.Coord.Z}} Mass:{{$value.Mass}}</code></pre>
        {{end}}
        <div class='metadata'>
            <time>Создан: {{.Created}}</time>
            <time>Срок: {{.Expires}}</time>
        </div>
    </div>
    {{end}}
{{end}}